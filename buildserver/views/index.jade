# using bootstrap theme Cerulean - https://bootswatch.com/cerulean/
extends layout
block content
  div.container.col-lg-12
    h1= title
    br
    p #[a.btn.btn-default.btn-info(href="https://github.com/wddlz/Complexity") Github repository for built project] 
    br
    h3 Build history
    div.col-lg-8
      table.table.table-bordered.table-hover.table-striped
        thead
          tr
            th.text-center Date
            th.text-center Log File
            th.text-center Build Status
            th.text-center Branch
        tbody
          each build, i in data
            -if (!build.link.includes('style.css'))
              tr 
                td.text-center #{build.date}
                td.text-center 
                  a(href='/' + build.link) #{build.link}
                -if (build.status=='failure')
                  td.danger.text-center #{build.status}
                -else
                  td.success.text-center #{build.status}
                td.text-center #{build.branch}
          
  
